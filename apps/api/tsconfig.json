{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node", "jest"],
        "baseUrl": "./src",
        "paths": {
            "@config/*": ["config/*"],
            "@controllers/*": ["controllers/*"],
            "@modules/*": ["modules/*"],
            "@services/*": ["services/*"]
        }
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist", "test", "**/*.spec.ts", "**/*.test.ts", "**/*.e2e-spec.ts"]
}
